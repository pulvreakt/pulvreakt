[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
max_line_length = 150
indent_size = 4
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
kotlin_code_style = "ktlint_official"
ktlint_standard_parameter-list-wrapping = false

[*.md]
trim_trailing_whitespace = false
